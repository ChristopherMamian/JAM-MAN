<div class="jumbotron text-center">
  <div class="container-fluid">
    <h1>Categories</h1>
    <h3>A bunch or random stuff using Faker.</h3><br>
  </div>
</div>

<div class="container-fluid">
  <% @display.each_slice(4) do |slice| %>
  <div class="row">
    <% slice.to_a.each do |category| %>
      <div class="col-md-3">
        <div class="thumbnail text-center" style="background-color:#dcdcdc">
          <div class="caption">
          <h3><%= category.name %></h3>
          <p>You know you want this.</p>
          <p><a href="categories/show/<%= category.id %>" class="btn btn-primary" role="button">Browse Articles...</a></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>

</body>
</html>
